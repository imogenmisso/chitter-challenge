<h2> Chitter </h2>

<form action="/users/new" method="get">
  <input type="submit" value="Sign Up">
</form>
<form action="/user/log_in" method="get">
  <input type="submit" value="Already signed up?">
</form>
<form action="/peep/new" method="post">
  <fieldset>
    <legend> What are you doing? </legend>
    Name
    <input type="text" name="name">
    Username
    <input type="text" name="username">
    Peep
    <input type="text" name="peep">
    <input type="submit" value="Post" >
  </fieldset>
</form>

<% @peeps.each do |peep| %>
<div> <%= peep.text %> by <%= peep.name %>(<%= peep.username %>) at <%= peep.time %>
<% end %>
</div>
