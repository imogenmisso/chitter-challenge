<h2> Chitter </h2>
  <% unless @user.nil? %>
      Logged in as <%= @user.name %>
<% end %>
<form action="/chitter" method="get">
  <input type="submit" value="Log out">
</form>

<form action="/chitter/user_wall" method="post">
  <fieldset>
    <legend> What are you doing? </legend>
    Peep
    <input type="text" name="peep">
    <input type="submit" value="Post" >
  </fieldset>
</form>

<% @peeps.each do |peep| %>
<div> <%= peep.text %> by <%= peep.name %>(<%= peep.username %>) at <%= peep.time %>
<% end %>
</div>
